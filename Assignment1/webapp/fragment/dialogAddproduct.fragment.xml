<core:FragmentDefinition xmlns="sap.m" xmlns:l="sap.ui.layout" xmlns:core="sap.ui.core" xmlns:f="sap.ui.layout.form">
	
		<Dialog title="Enter New Product Detail" id="idDialogAddfrag" resizable="true" contentHeight="70%" contentWidth="23%">
				<content>
					<l:VerticalLayout class="sapUiContentPadding" width="100%">
						<Label text="Product id" />
						<Input value="" placeholder = "enter value" id="dialogProductId"/>
						<Label text="Product name" />
						<Input value="" placeholder = "enter value" id="dialogProductName"/>
						<Label text="Product description" />
						<Input value=""  placeholder = "enter value" id="dialogProductDesc"/>
						
						
						
					</l:VerticalLayout>	
					
					
					
				</content>
				<beginButton>
			<Button text="Add" press="onDialogAdd"/>
		</beginButton>
		<endButton>
			<Button text="Cancel" press="onDialogAddClose"/>
		</endButton>
			
			
		</Dialog>
	
	
	
	
	
	
	
	
	
	
	</core:FragmentDefinition>